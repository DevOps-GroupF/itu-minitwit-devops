@page
@model MiniTwitInfra.Controllers.LoginController
@{
    ViewData["Title"] = "Sign In";
}

  <h2>Sign In</h2>
   @if (ViewData.ContainsKey("error") ) 
    {
        <div class=error><strong>Error:</strong> @ViewData["error"]</div>  
    }
    @if (ViewData.ContainsKey("message") ) 
    {
        <div class=flashes> @ViewData["message"]</div>  
    }
  <form action="" method=post>
    <dl>
      <dt>Username:
      <dd><input type=text name=username size=30 value="">
      <dt>Password:
      <dd><input type=password name=password size=30>
    </dl>
    <div class=actions><input type=submit value="Sign In"></div>
  </form>



